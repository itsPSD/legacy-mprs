{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "no-var": "error",
    "semi": ["error", "always"],
    "quotes": "off",
    "no-console": "off",
    "eqeqeq": ["error", "always"],
    "curly": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
